{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver"],
            "django": true,
            "autoReload": {
                "enable": true
            },
            "env": {
                "DJANGO_SETTINGS_MODULE": "meuprojeto.settings"
            }
        }
    ]
}
